# Base configuration


[colors]
background   = ${xrdb:background:#222}
foreground   = ${xrdb:foreground:#222}
bar-active   = ${xrdb:foreground:#222}
bar-inactive = ${xrdb:color8:#222}
bar-urgent   = ${xrdb:color9:#222}
date         = ${xrdb:color3:#222}
time         = ${xrdb:color2:#222}

[section/base-bar]
height          = 30
offset-y        = 10
padding = 1
module-margin = 1

font-0          = "JetBrainsMono Nerd Font:style=Regular:size=6;4"
font-1          = "Noto Sans:style=Regular:size=6;4"
font-2          = "Font Awesome 5 Free:style=Solid:size=6;4"
background      = ${colors.background}
foreground      = ${colors.foreground}
dpi-x           = 192
dpi-y           = 192

wm-restack      = i3
wm-name         = i3

monitor = ${env:MONITOR}


# Bars


[bar/desktop]
inherit       = section/base-bar
width           = 240
offset-x        = 10
padding = 0
modules-left    = i3
override-redirect = true


[bar/time]
inherit = section/base-bar
width           = 100
offset-x        = 100%:-110
padding = 1
modules-right  = time-label time
override-redirect = true


[bar/date]
inherit = section/base-bar
width           = 160
offset-x        = 100%:-280
padding = 1
modules-right   = date-label date
override-redirect = true
click-left = gnome-calendar


[bar/battery]
inherit = section/base-bar
width = 85
offset-x = 100%:-375
padding = 1
modules-right = battery
override-redirect = true


[bar/pulse]
inherit = section/base-bar
width = 200
offset-x = 100%:-585
modules-right = pulse
override-redirect = true


# Modules


[module/i3]
type = internal/i3
format = <label-state>

pin-workspaces = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

label-mode = %mode%
label-mode-background = #e60053

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 1


[module/time-label]
type = custom/text

content = ""
content-foreground = ${colors.time}


[module/time]
type = internal/date

label = %time%
time = "%H:%M"
interval = 10


[module/separator]
type = custom/text

content = "|"
content-foreground = ${colors.foreground}

[module/date-label]
type = custom/text

content = ""
content-foreground = ${colors.date}


[module/date]
type = internal/date

label = %date%
date = "%a, %b %d"
date-alt =
interval = 60


[module/pulse]
type = custom/script

tail = true
label = %output%

exec = pulse.sh listen
click-right = exec pavucontrol &
click-left = pulse.sh togmute
click-middle = pulse.sh next-sink
scroll-up = pulse.sh up
scroll-down = pulse.sh down
label-foreground = ${colors.foreground}


[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ADP1

poll-interval = 5

time-format = %H:%M
format-charging = <animation-charging>  <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = <ramp-capacity>  <label-full>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-2 = 
animation-discharging-3 = 
animation-discharging-4 = 
animation-discharging-framerate = 500
