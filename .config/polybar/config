# Base configuration


[colors]
background   = ${xrdb:background:#222}
foreground   = ${xrdb:foreground:#222}
bar-active   = ${xrdb:foreground:#222}
bar-inactive = ${xrdb:color8:#222}
bar-urgent   = ${xrdb:color9:#222}
date         = ${xrdb:color3:#222}
time         = ${xrdb:color2:#222}

[section/base-bar]
height          = 30
offset-y        = 6
padding = 1
module-margin = 1

font-0          = "JetBrainsMono Nerd Font:style=Regular:size=6;4"
font-1          = "Noto Sans:style=Regular:size=6;4"
font-2          = "Font Awesome 5 Free:style=Solid:size=6;4"
background      = ${colors.background}
foreground      = ${colors.foreground}
dpi-x           = 192
dpi-y           = 192

wm-restack      = i3
wm-name         = i3

monitor = ${env:MONITOR}


# Bars


[bar/desktop]
inherit       = section/base-bar
width           = 240
offset-x        = 9
padding = 0
modules-left    = i3
override-redirect = true


[bar/time]
inherit = section/base-bar
width           = 100
offset-x        = 100%:-108
modules-right  = time-label time
override-redirect = true


[bar/date]
inherit = section/base-bar
width           = 160
offset-x        = 100%:-275
modules-right   = date-label date
override-redirect = true


[bar/pulse]
inherit = section/base-bar
width = 200
offset-x = 100%:-483
modules-right = pulse
override-redirect = true


# Modules


[module/i3]
type = internal/i3
format = <label-state>

pin-workspaces = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

label-mode = %mode%
label-mode-background = #e60053

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 1


[module/time-label]
type = custom/text

content = ""
content-foreground = ${colors.time}


[module/time]
type = internal/date

label = %time%
time = "%H:%M"
time-alt =
interval = 10


[module/separator]
type = custom/text

content = "|"
content-foreground = ${colors.foreground}

[module/date-label]
type = custom/text

content = ""
content-foreground = ${colors.date}


[module/date]
type = internal/date

label = %date%
date = "%a, %b %d"
date-alt =
interval = 60


[module/pulse]
type = custom/script

tail = true
label = %output%

exec = pulse.sh listen
click-right = exec pavucontrol &
click-left = pulse.sh togmute
click-middle = pulse.sh next-sink
scroll-up = pulse.sh up
scroll-down = pulse.sh down
label-foreground = ${colors.foreground}
