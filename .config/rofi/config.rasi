configuration {
  modi: "combi,drun,run,ssh,window";
  show-icons: true;
  terminal: "alacritty";
  run-shell-command: "{terminal} --window -- bash";
  combi-modi: "drun,run,ssh,window";
  window-format: "{t}";
  font: "Neuropol 24";
  combi-hide-mode-prefix: true;
  display-window: "Windows";
  display-windowcd: "Windows";
  display-run: "Commands";
  display-ssh: "SSH";
  display-drun: "Applications";
  display-combi: "All";
  display-keys: "Keys";
}

@theme "Arc-Dark.rasi"
